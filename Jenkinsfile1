@library('shared-library-prac@main')
pipeline {
    agent { label 'builder'}
    environment {
        ARTIFACTORY_CREDENTIALS = credentials('jfrog_artifactory_credentials')
    }
        
    stages 
    {
        stage('checkout') {
            agent { label 'builder'}
            steps {
                Stage_CheckOut()
            }
        }
         stage('build') {
             agent { label 'builder'}
            steps {
                Stage_CheckOut()
            }
        }
         stage('publish') { 
             agent { label 'builder'}
            steps {
                Stage_Publish()
            }    
        }
        stage('deploy') {
           agent { label 'deployer'}
           steps {
                Stage_Deploy()
           }
       }
    }   
}
