pipeline {
    agent { label 'build-node' }  

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'master', url: 'https://github.com/gunab5502/hello-world-war.git'
            }
        }

        stage('Run Ansible Playbook') {
            steps {
                sh 'ansible-playbook -i inventory.ini playbook.yml --extra-vars "target_ip=${NODE_IP}"'
            }
        }
    }
}
