pipeline {
    agent any  
    stages {
        stage('Checkout Code') {
            steps {
                git url: 'https://github.com/Charanraj2498/hello-world-war.git', branch: 'master'
            }
        }

        stage('Run Ansible Playbook') {
            steps {
                ansiblePlaybook(
                    playbook: 'build.yml',
                    inventory: 'inventory.ini',
                    credentialsId: 'ansible-ssh-key'
                )
            }
        }
    }
}
