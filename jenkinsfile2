pipeline {
    agent { label 'build-node' }  

    parameters {
        string(name: 'NODE_IP', defaultValue: '', description: 'Target node IP address')
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'master', url: 'https://github.com/Charanraj2498/hello-world-war.git'
            }
        }

        stage('Generate Dynamic Inventory') {
            steps {
                script {
                    if (params.NODE_IP?.trim()) {
                        sh """
                            echo '[target]' > inventory.ini
                            echo '${params.NODE_IP}' >> inventory.ini
                        """
                    } else {
                        error("NODE_IP parameter is empty! Please provide a valid IP address.")
                    }
                }
            }
        }

        stage('Run Ansible Playbook') {
            steps {
                sh "ansible-playbook -i inventory.ini playbook.yml --extra-vars 'target_ip=${NODE_IP}'"
            }
        }
    }
}
